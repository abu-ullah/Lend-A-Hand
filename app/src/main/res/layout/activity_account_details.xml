<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.MainActivity"
    android:orientation="vertical"
    android:background="#f0ffff"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_dialog_dialer"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="right|center">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnNewMessage"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Send Message"
            app:cornerRadius="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#0C1893"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="8sp"
            />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/defaultavatar"
            android:layout_marginRight="50dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">


            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danial Sasanpour"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="0dp"
            >
            <Button
                android:id="@+id/btnPosts"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Posts"
                app:cornerRadius="30dp"
                android:gravity="center"
                android:backgroundTint="#ff0000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            >
            <ImageButton
                android:id="@+id/imageButtonRefresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_filter_list_24"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="end"
                />
        </LinearLayout>






    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



    <ListView
        android:id="@+id/lvPosts"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:background="#d3d3d3"
        android:elevation="100dp"
        android:layout_marginBottom="10dp"
        ></ListView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp">

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderRadius"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:valueFrom="0.1"
            android:valueTo="20.0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >

        <LinearLayout
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_width="0dp"
            >


            <TextView
                android:id="@+id/tvRadius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radius: "
                android:textSize="18sp"
                android:textColor="@color/black"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_width="0dp"
            >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:layout_gravity="center"
                android:backgroundTint="#EC2C2C"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/btnEditSave"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Edit"
                android:layout_gravity="center"
                android:backgroundTint="#CB1456FF"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_marginRight="40dp"
                />


        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/btnLeaveReviewRating"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="Leave a review and rating"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:backgroundTint="#ff0000"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_home_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>



        <ImageButton
            android:id="@+id/imageButtonMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_chat_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>

        <ImageButton
            android:id="@+id/imageButtonAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_person_24"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
    </LinearLayout>





</LinearLayout>